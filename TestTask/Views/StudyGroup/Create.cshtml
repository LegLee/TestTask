@model TestTask.Models.StudyGroup

@{
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<h4>учебную группу</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="teacher_name" class="control-label">Преподаватель</label>
                @*<input asp-for="teacher_name" class="form-control" />*@
                @Html.DropDownList("teacherid", ViewBag.Teachers as SelectList)
                <span asp-validation-for="teacher_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="group_name" class="control-label">Название</label>
                <input asp-for="group_name" class="form-control" />
                <span asp-validation-for="group_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
